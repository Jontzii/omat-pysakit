{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@definitions/*": ["types/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["**/*.test.ts"]
}
